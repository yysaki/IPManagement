<h1>割り当て済みIPアドレス</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>IPアドレス</th>
      <th>利用者</th>
      <th>マシン名</th>
      <th>位置</th>
      <th>備考</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @usages.sort.each do |usage| %>
      <tr>
        <td><%= link_to usage.ip_address, edit_ip_addr_usage_path(usage) %></td>
        <td><%= usage.user %></td>
        <td><%= usage.machine_name %></td>
        <td><%= usage.location %></td>
        <td><%= usage.note %></td>
        <td><%= link_to "delete", usage, method: :delete,
          data: { confirm: "割り当てを解除します。本当によろしいですか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

